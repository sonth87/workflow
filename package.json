{
  "name": "bpm-core",
  "private": false,
  "version": "0.0.0",
  "type": "module",
  "main": "./lib-dist/bpm-core.cjs.js",
  "module": "./lib-dist/bpm-core.es.js",
  "types": "./lib-dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib-dist/index.d.ts",
      "import": "./lib-dist/bpm-core.es.js",
      "require": "./lib-dist/bpm-core.cjs.js"
    },
    "./i18n": {
      "types": "./lib-dist/workflow/i18n.d.ts",
      "import": "./lib-dist/bpm-core.es.js",
      "require": "./lib-dist/bpm-core.cjs.js"
    },
    "./styles": "./lib-dist/bpm-core.css"
  },
  "files": [
    "lib-dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:lib": "node scripts/build-lib.js",
    "build:sdk": "tsc -b && vite build --config ./sdk/vite.config.sdk.ts && node scripts/build-sdk.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "preview": "vite preview",
    "preview:sdk": "vite preview --outDir sdk-dist"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@sth87/shadcn-design-system": "^0.0.33",
    "@tailwindcss/vite": "^4.1.17",
    "@types/dagre": "^0.7.53",
    "@xyflow/react": "^12.9.3",
    "d3-drag": "^3.0.0",
    "d3-selection": "^3.0.0",
    "dagre": "^0.8.5",
    "dayjs": "^1.11.19",
    "install": "^0.13.0",
    "lodash": "^4.17.21",
    "lucide-react": "^0.556.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.66.1",
    "react-markdown": "^10.1.0",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "tailwindcss": "^4.1.17",
    "usehooks-ts": "^3.1.1",
    "zod": "^4.2.1",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/d3-drag": "^3.0.7",
    "@types/d3-selection": "^3.0.11",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "clsx": "^2.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "prettier": "^3.3.3",
    "tailwind-merge": "^3.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "javascript-obfuscator": "^5.1.0",
    "vite": "^7.2.4"
  }
}
